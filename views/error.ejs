<%- include('partials/header', { title: 'Error ' + error.status }) %>

<main class="main-content">
  <div class="container">
    <div class="page-header">
      <h1>Error <%= error.status %></h1>
      <p><%= error.message %></p>
    </div>

    <div style="text-align: center; padding: 48px 32px">
      <i
        class="fas fa-exclamation-triangle"
        style="font-size: 64px; color: var(--warning); margin-bottom: 24px"
      ></i>
      <p style="color: var(--text-secondary); margin-bottom: 32px">
        <% if (error.status === 404) { %> The page you're looking for doesn't
        exist. <% } else { %> We're experiencing some technical difficulties. <%
        } %>
      </p>
      <a href="/" class="btn btn-primary">
        <i class="fas fa-home"></i>
        Go Home
      </a>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
